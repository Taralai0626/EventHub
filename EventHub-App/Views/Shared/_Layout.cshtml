<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eventHub</title>
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventHub_App.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/dfd2096e8b.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>
</head>
<body>
    <header>

  
            <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light bg-white border-bottom box-shadow mb-3">
        
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="FavouriteEvents" asp-action="Create">EventHub_App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item px-3">
                            <a class="nav-link text-dark" asp-area="" asp-controller="FavouriteEvents" asp-action="Create"><i class="fa-solid fa-house fa-class"></i><span class="ms-2">Hello</span></a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link text-dark" asp-area="" asp-controller="FavouriteEvents" asp-action="Index"> <i class="fa-solid fa-heart fa-class"></i><span class="ms-2">Favourites</span></a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>

          
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    @section Styles
{
    <style type="text/css">
        main {
            padding: 0;
        }

        .fa-class{
        color:#B7D1E2;
        }

        .nav-item:hover{
            background-color:#E8ECEF;
            border-radius:20px;

        }
    </style>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Styles", required: false)
</body>
</html>
